{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tailwind.config.ts",
    ".next/types/**/*.ts",
    "sentry.*.ts",
    "next.config.ts",
    "__tests__/**/*.ts",
    "jest.config.ts",
  ],
  "exclude": ["node_modules"]
}
