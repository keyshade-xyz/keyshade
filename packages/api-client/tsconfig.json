{
  "extends": "../tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@api-client/*": ["./src/*"]
    },
    "outDir": "dist",
    "plugins": [{ "transform": "typescript-transform-paths" }],
    "moduleResolution": "Bundler"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
